        @using (Html.BeginForm("Index", "Bus", FormMethod.Post, new { @class = "buy" }))
        {
            @await Html.PartialAsync("_FormTicket", (Model?.Count() > 0) ? new[]{Model[1].ToString(), Model[2].ToString(), Model[3].ToString()} : null);
        ;
        }
    </div>
</div>

@await Html.PartialAsync("_InfoTickets", (Model?.Count() > 0) ? new[]{Model[0], "Buy", "Bus"} : null)